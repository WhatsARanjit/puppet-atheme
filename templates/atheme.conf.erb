/******************************************************************************
 * MODULES SECTION.                                                           *
 ******************************************************************************/

loadmodule "modules/protocol/<%= @protocol %>";
loadmodule "modules/backend/opensex";
loadmodule "modules/crypto/posix";
#loadmodule "modules/auth/ldap";

/******************************************************************************
 * SERVICES RUNTIME CONFIGURATION SECTION.                                    *
 ******************************************************************************/

serverinfo {
	name           = "<%= @server_name %>";
	desc           = "<%= @desc %>";
	numeric        = "<%= @numeric %>";
	recontime      = 10;
	netname        = "<%= @netname %>";
	hidehostsuffix = "<%= @hidehostsuffix %>";
	adminname      = "<%= @adminname %>";
	adminemail     = "<%= @adminemail %>";
	registeremail  = "<%= @registeremail %>";
	mta            = "<%= @mta %>";

	loglevel    = { error; info; admin; network; wallops; };
	maxlogins   = 5;
	maxusers    = 5;
	mdlimit     = 30;
	emaillimit  = 10;
	emailtime   = 300;
	auth        = none;
	casemapping = rfc1459;
};

uplink "<%= @uplink %>" {
	host             = "<%= @host %>";
<% if @vhost -%>
	vhost            = "<%= @vhost %>";
<% end -%>
<% if @send_password -%>
	send_password    = "<%= @send_password %>";
<% end -%>
<% if @receive_password -%>
	receive_password = "<%= @receive_password %>";
<% end -%>
<% if @password -%>
  password         = "<%= @password %>";
<% end -%>
	port             = <%= @port %>;
};

